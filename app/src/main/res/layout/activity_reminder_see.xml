<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SetReminderActivity">

    <TextView
        android:id="@+id/reminder_text_see"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="My Reminder"
        android:background="#B3B1B1"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:textAllCaps="true"/>
    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/home_logo_background"
        android:layout_below="@+id/reminder_text_see">
        <TextView
            android:id="@+id/reminder_text_see_message"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:hint="Message"
            android:layout_marginEnd="8dp"
            android:textAlignment="gravity"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="8dp"
            android:textSize="15sp"
            android:textAllCaps="true"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear"
        android:layout_marginTop="30dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textAllCaps="true"
            android:layout_marginTop="20dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginStart="20dp"/>
        <TextView
            android:id="@+id/reminder_date_see"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:layout_marginTop="15dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginStart="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"
            android:text="Time"
            android:textAllCaps="true"
            android:textSize="15sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/reminder_time_see"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textAllCaps="true"
            android:layout_marginTop="15dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginStart="20dp"/>

    </LinearLayout>
    <Button
        android:id="@+id/returnprev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Return"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/home_logo_background"
        android:layout_below="@+id/layout"/>




</RelativeLayout>